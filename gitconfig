# vim:ft=gitconfig

# Let these be taken from the environment
[user]
    name  =
    email =

[core]
    excludesfile = ~/.gitignore

[color]
    interactive = auto
    status      = auto
    ui          = auto

[url "git://github.com/hoelzro/"]
    insteadOf = hoelzro:
[url "git@github.com:hoelzro/"]
    pushInsteadOf = hoelzro:

[url "git://github.com/"]
    insteadOf = github:

[alias]
    br    = branch
    co    = checkout
    s     = status
    ss    = show -s
    comit = commit
    ff    = merge --ff-only
    hist  = log --graph --color=always --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s'
    in    = incoming
    out   = outgoing

[push]
    default = upstream

[include]
    path = .git/local.conf
