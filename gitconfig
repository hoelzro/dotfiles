# vim:ft=gitconfig

[include]
    path = .git/local.conf

# Let these be taken from the environment
[user]
    name  =
    email =

[core]
    attributesfile = ~/.gitattributes
    excludesfile   = ~/.gitignore
    whitespace     = tab-in-indent,trailing-space

[pager]
    log = /usr/share/git/diff-highlight/diff-highlight | less -FRXi
    show = /usr/share/git/diff-highlight/diff-highlight | less -FRXi
    diff = /usr/share/git/diff-highlight/diff-highlight | less -FRXi

[diff]
    algorithm = histogram
    compactionHeuristic = true
    indentHeuristic = true
    colorMoved = default

[init]
    templatedir=~/.git/templates
    defaultBranch = main

[color]
    interactive = auto
    status      = auto
    ui          = auto

[url "https://github.com/hoelzro/"]
    insteadOf = hoelzro:
[url "git@github.com:hoelzro/"]
    pushInsteadOf = hoelzro:

[url "git@bitbucket.org:hoelzro/"]
    insteadOf = hoelzrobb:

[url "https://github.com/"]
    insteadOf = github:

[url "https://github.com/"]
    insteadOf = githubrw:
[url "git@github.com:"]
    pushInsteadOf = githubrw:

[alias]
    br       = branch
    co       = checkout
    s        = status
    ss       = show -s
    comit    = commit
    ff       = merge --ff-only
    hist     = log --graph --color=always --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s'
    in       = incoming
    out      = outgoing
    psuh     = push
    whatsnew = log ORIG_HEAD..HEAD
    vdiff    = difftool --tool=vimdiff --no-prompt
    rs       = remote show -n

[push]
    default = upstream
    followTags = true

[github]
    user = hoelzro

[rebase]
    autostash  = true
    autosquash = true

[merge]
    defaultToUpstream = true
    conflictstyle = zdiff3
    autostash = true

[pull]
    rebase = true

[interactive]
    singlekey = true

[log]
    abbrevCommit = true
    decorate     = true

[fetch]
    prune = true

[pretty]
    online = %H %s

[status]
    showStash = true

[advice]
    pushUpdateRejected = false
    pushNonFFCurrent = false
    pushNonFFMatching = false
    pushAlreadyExists = false
    pushFetchFirst = false
    pushNeedsForce = false
    skippedcherrypicks = false
    statusHints = false
    statusUoption = false
    commitBeforeMerge = false
    resolveConflict = false
    implicitIdentity = false
    detachedHead = false
    amWorkDir = false
    rmHints = false
    addEmbeddedRepo = false
    ignoredHook = false
    waitingForEditor = false

[branch]
  sort = -committerdate
[tag]
  sort = version:refname
[diff]
  renames = true
  colorMoved = plain
[syncdotfiles]
  repo = /home/rob/.vim
  repo = /home/rob/.zsh-scripts/
  repo = /home/rob/.config/awesome/
  repo = /home/rob/projects/dotfiles/

[absorb]
  oneFixupPerCommit = true
  fixupTargetAlwaysSHA = true
