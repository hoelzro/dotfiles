# vim:ft=gitconfig

[include]
    path = .git/local.conf

# Let these be taken from the environment
[user]
    name  =
    email =

[core]
    attributesfile = ~/.gitattributes
    excludesfile   = ~/.gitignore
    whitespace     = tab-in-indent,trailing-space

[init]
    templatedir=~/.git/templates

[color]
    interactive = auto
    status      = auto
    ui          = auto

[url "git://github.com/hoelzro/"]
    insteadOf = hoelzro:
[url "git@github.com:hoelzro/"]
    pushInsteadOf = hoelzro:

[url "git@bitbucket.org:hoelzro/"]
    insteadOf = hoelzrobb:

[url "git://github.com/"]
    insteadOf = github:

[url "git://github.com/"]
    insteadOf = githubrw:
[url "git@github.com:"]
    pushInsteadOf = githubrw:

[alias]
    br       = branch
    co       = checkout
    s        = status
    ss       = show -s
    comit    = commit
    ff       = merge --ff-only
    hist     = log --graph --color=always --pretty='[%C(cyan)%h%Creset]%C(bold cyan)%d%Creset %s'
    in       = incoming
    out      = outgoing
    psuh     = push
    whatsnew = log ORIG_HEAD..HEAD
    vdiff    = difftool --tool=vimdiff --no-prompt

[push]
    default = upstream

[github]
    user = hoelzro

[rebase]
    autosquash = true

[merge]
    defaultToUpstream = true

[pull]
    rebase = true

[interactive]
    singlekey = true

[log]
    abbrevCommit = true
    decorate     = true

